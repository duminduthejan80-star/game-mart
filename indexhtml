<nav>
  <button onclick="showAll()">All Games</button>
  <button onclick="filterType('Online')">Online</button>
  <button onclick="filterType('Offline')">Offline</button>
  <button onclick="adminLogin()">Admin</button>
</nav>

<div id="games"></div>

<!-- ADMIN PANEL -->
<div id="adminPanel">
  <h2>Admin Panel</h2>
  <input type="text" id="gname" placeholder="Game Name">
  <input type="text" id="gdesc" placeholder="Game Details">
  <input type="text" id="glink" placeholder="MediaFire Download Link">
  <select id="gtype">
    <option value="Online">Online</option>
    <option value="Offline">Offline</option>
  </select>
  <button onclick="addGame()">Save Game</button>
</div>

<script>
let games = JSON.parse(localStorage.getItem("games")) || [];

function render(list=games){
  const box = document.getElementById("games");
  box.innerHTML="";
  list.forEach((g,i)=>{
    box.innerHTML += `
    <div class="game">
      <h3>${g.name}</h3>
      <p>${g.desc}</p>
      <span class="tag">${g.type}</span><br>
      <a href="${g.link}" target="_blank">Download</a><br><br>
      ${g.admin ? `
      <button onclick="editGame(${i})">Edit</button>
      <button onclick="deleteGame(${i})">Delete</button>
      ` : ``}
    </div>
    `;
  });
}

function adminLogin(){
  let pass = prompt("Enter Admin Password");
  if(pass==="8036"){
    document.getElementById("adminPanel").style.display="block";
    games.forEach(g=>g.admin=true);
    render();
  }else{
    alert("Wrong Password");
  }
}

function addGame(){
  let game={
    name:gname.value,
    desc:gdesc.value,
    link:glink.value,
    type:gtype.value,
    admin:true
  };
  games.push(game);
  save();
  render();
}

function deleteGame(i){
  if(confirm("Delete this game?")){
    games.splice(i,1);
    save();
    render();
  }
}

function editGame(i){
  let g = games[i];
  gname.value=g.name;
  gdesc.value=g.desc;
  glink.value=g.link;
  gtype.value=g.type;
  games.splice(i,1);
}

function save(){
  localStorage.setItem("games",JSON.stringify(games));
}

function filterType(t){
  render(games.filter(g=>g.type===t));
}

function showAll(){
  render();
}

render();
</script>

</body>
